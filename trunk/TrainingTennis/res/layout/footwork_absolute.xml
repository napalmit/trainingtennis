<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/AbsoluteLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tennis_court"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    tools:ignore="Deprecated" >

    <ImageView
        android:id="@+id/start"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_x="5dp"
        android:layout_y="273dp"
        android:clickable="true"
        android:contentDescription="start session"
        android:scaleType="fitXY"
        android:src="@drawable/play_verde"
        tools:ignore="HardcodedText" />
    
    <ImageView
        android:id="@+id/pause"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_x="5dp"
        android:layout_y="273dp"
        android:clickable="true"
        android:contentDescription="pause session"
        android:scaleType="fitXY"
        android:src="@drawable/pause"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/stop"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_x="175dp"
        android:layout_y="273dp"
        android:clickable="true"
        android:contentDescription="stop session"
        android:scaleType="fitXY"
        android:src="@drawable/stop_rosso"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/txtTimer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="0dp"
        android:layout_y="180dp"
        android:gravity="center"
        android:text="00:00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60sp"
        tools:ignore="HardcodedText" />

</AbsoluteLayout>